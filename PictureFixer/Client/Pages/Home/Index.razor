@page "/"
@implements IDisposable
@inject ComponentApplicationState PersistentData
@inject HttpClient Http

<ImageList Items="@images" TItem="EditableImage">
    <ImageListItem Image="@context"/>
</ImageList>

@code {
    private EditableImage[] images;

    protected override async Task OnInitializedAsync()
    {
        PersistentData.OnPersisting += PersistImageData; // Note: This API will change

        if (!PersistentData.TryTakeAsJson("preloadedImageData", out images))
        {
            images = await Http.GetFromJsonAsync<EditableImage[]>("api/EditableImage");
        }
    }

    private Task PersistImageData()
    {
        PersistentData.PersistAsJson("preloadedImageData", images);
        return Task.CompletedTask;
    }

    void IDisposable.Dispose()
    {
        PersistentData.OnPersisting -= PersistImageData;
    }
}
